# Server
PORT=7000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/pricy

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production

# CORS
CORS_ORIGINS=http://localhost:7001

# Shopify (from Dev Dashboard > Apps > Your App > Settings)
SHOPIFY_CLIENT_ID=your-client-id-from-dev-dashboard
SHOPIFY_CLIENT_SECRET=your-client-secret-from-dev-dashboard
SHOPIFY_REDIRECT_URI=http://localhost:7000/api/auth/shopify/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:7001

# Billing
# Set MOCK_BILLING=true to use fake Stripe (no real charges, no credentials needed)
MOCK_BILLING=true

# Stripe (not needed when MOCK_BILLING=true)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs (from Product Catalog)
STRIPE_PRICE_STARTER_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_STARTER_YEARLY=price_xxxxxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxx
STRIPE_PRICE_ADVANCED_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_ADVANCED_YEARLY=price_xxxxxxxx
